<%= render 'index/navigation'%>
<div class="row">
  <div class="col-xs-1 column"></div>
  <div class="col-xs-10 column">
    <% if @message %>
      <div class="errors-block">
        <%= @message %>
      </div>
    <% end %>
    <div class="card-block text-center">
      <div class="panel-heading">
        <h3 class="panel-header">Create Account</h3>
      </div>
      <div class="panel-body">
        <%= form_for :user, url:{action: "create"}, remote: true, authenticity_token: true do |f| %>
          <div class="form-group">
            <label for="user[full_name]">Full Name</label>
            <%= f.text_field :name, :class => "form-control", :placeholder => "name..." %>
          </div>
          <div class="form-group">
            <label for="user[email]">Email</label>
            <%= f.text_field :email, :class => "form-control", :placeholder => "email..." %>
          </div>
          <div class="form-group">
            <label for="user[password]">Password</label>
            <%= f.password_field :password, :class => "form-control", :placeholder => "password..." %>
          </div>
          <div class="form-group">
            <label for="access_token">Access Token</label>
            <%= f.text_field :access_token, :class => "form-control", :placeholder => "access token..." %>
          </div>
          <%= f.submit "Create", :id => "session-submit", :class => "btn btn-default" %>
        <%end%>
      </div>
    </div>
  </div>
  <div class="col-xs-1 column"></div>
</div>
